<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorEmpty"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/img_row_chatting_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/profile_empty"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:paddingRight="50dp">

        <ImageView
            android:id="@+id/img_row_chatting_bubble_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:tint="#C7EDFC"
            android:src="@drawable/bubble_arrow" />

        <TextView
            android:id="@+id/txt_row_chatting_message"
            android:layout_toRightOf="@+id/img_row_chatting_bubble_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_message"
            android:padding="16dp"
            android:text="This is wangyi's message."
            android:textColor="#000" />
    </RelativeLayout>

</LinearLayout>
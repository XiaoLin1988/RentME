<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorEmpty"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/lyt_tool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:elevation="5dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/btn_project_complete_detail_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="3dp"
            android:src="@drawable/tool_back"
            android:scaleType="centerInside"/>

        <com.android.emerald.rentme.Views.AutoFitTextView
            android:id="@+id/txt_project_complete_detail_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:text="Project for langlangFan"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:singleLine="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_complete_detail_preview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/placeholder"
        android:scaleType="centerCrop"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorWeekUnselect"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:elevation="3dp">

        <TextView
            android:id="@+id/txt_project_complete_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project for langlangFan"
            android:textSize="@dimen/txt_label_size"
            android:textStyle="bold"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"/>

        <LinearLayout
            android:id="@+id/lyt_timeframe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|right"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_project_complete_detail_timeframe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="hours"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Details"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_project_complete_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="asfd"
                android:inputType="textMultiLine"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/edit_project_complete_detail_review"
                style="@style/FullWidthEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_border_round"
                android:gravity="top"
                android:text="@string/project_description"
                android:textColor="@color/colorGray"
                android:singleLine="false"/>

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/rating_project_complete_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:srb_numStars="5"
                app:srb_rating="4"
                app:srb_starWidth="20dp"
                app:srb_starHeight="20dp"
                app:srb_starPadding="0dp"
                app:srb_stepSize="1"
                app:srb_isIndicator="false"
                app:srb_clickable="true"
                app:srb_scrollable="true"
                app:srb_clearRatingEnabled="true"
                app:srb_drawableEmpty="@drawable/star_empty"
                app:srb_drawableFilled="@drawable/star_fill">
            </com.willy.ratingbar.ScaleRatingBar>

            <TextView
                android:id="@+id/txt_project_complete_detail_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/btn_project_complete_detail_leave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue_round"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="bottom"
                android:text="Leave Review"
                android:textColor="@color/colorText"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>